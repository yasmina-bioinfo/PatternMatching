{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸ”„ Sync to GitHub",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "sync_safe.bat",
                "${input:commitMsg}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "commitMsg",
            "type": "promptString",
            "description": "Message du commit",
            "default": "Auto update - ${workspaceFolderBasename}"
        }
    ]
}